<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_instructions_in_recipe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp"
        android:text="Enter the instructions to cook this item:"></TextView>

    <EditText
        android:id="@+id/edit_instructions_in_recipe"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="228dp"
        android:hint="Enter the instructions for this recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"></EditText>

</androidx.constraintlayout.widget.ConstraintLayout>