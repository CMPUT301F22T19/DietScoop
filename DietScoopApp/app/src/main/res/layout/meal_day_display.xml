<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        Adding a spacer view:?-->
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <!--        Adding a spacer view:-->

<!--        Textview for displaying the date of the given mealplan date-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/mealplan_for_date"
            android:gravity="center"
            android:hint="Sample Date" />

<!--        Adding a spacer view:?-->
        <View
            android:layout_width="61dp"
            android:layout_height="match_parent" />
<!--        Adding a spacer view:-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/view_mealplan_for_date_button"
            android:text="View" />


        <!--        Adding a spacer view:?-->
        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />
        <!--        Adding a spacer view:-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/delete_mealplan_for_date_button"
            android:text="Delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>