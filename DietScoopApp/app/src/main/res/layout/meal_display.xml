<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        Adding a spacer view:?-->
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <!--        Adding a spacer view:-->

<!--        Textview for displaying the date of the given mealplan date-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/mealplan_for_date"
            android:gravity="center"
            android:hint="Sample Date"></TextView>

<!--        Adding a spacer view:?-->
        <View
            android:layout_width="140dp"
            android:layout_height="match_parent"></View>
<!--        Adding a spacer view:-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/modify_mealplan_for_date_button"
            android:text="Modify"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>